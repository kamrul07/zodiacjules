<div class="TipsWrapper">
    <div class="tipsWrapperInner">
        <div class="tipsareaHeader">
            <h2>{{ section.settings.title }}</h2>
            <div class="tipcloseicon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="19" viewBox="0 0 20 19" fill="none">
                <line x1="19.3536" y1="0.353553" x2="1.35355" y2="18.3536" stroke="#9F9F9F"/>
                <line y1="-0.5" x2="25.4558" y2="-0.5" transform="matrix(0.707107 0.707107 0.707107 -0.707107 1 0)" stroke="#9F9F9F"/>
                </svg>
            </div>
        </div>
        <div class="tipsarea">
            {% for block in section.blocks %}
            <div class="tipItem">
                <div class="tipItemInner">
                    <div class="tipItemLeft">
                        <img src="{{ block.settings.tip_image | img_url: 'master' }}" alt="Image">
                    </div>
                    <div class="tipItemRight">
                        <h3>{{ block.settings.title }}</h3>
                        <div>{{ block.settings.description }}</div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>    
    </div>
</div> 
